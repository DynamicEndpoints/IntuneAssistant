            </NavLink>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="group-assignments">
                    <MudIcon Icon="@Icons.Material.Filled.GroupAdd" Size="Size.Large"  Style='padding-right: 15px'/>

---
import PolicySettings from '../../../components/policies/configuration/settings/page';
import MainLayout from "../../../layouts/main-layout.astro";
---

<MainLayout title="Configuration Policy Settings" mainClass="flex-1">
    <section id="features" class="bg-background-200 py-8 md:pt-12">
        <div class="container space-y-6">
            <div class="mx-auto flex max-w-[58rem] flex-col space-y-4">
                <h3 class="font-heading text-3xl leading-[1.1] sm:text-3xl md:text-6xl">Configuration Policy Settings</h3>
                <p class="max-w-[95%] leading-normal text-muted-foreground sm:text-lg sm:leading-7 balance-text">
                   Find all your configuration policies in one place. Easily manage and edit your configuration policies.
                </p>
            </div>
        </div>
    </section>
    <PolicySettings client:only="react" />
</MainLayout>
---
import MainLayout from "@/layouts/main-layout.astro";
import {
    Card,
    CardContent,
    CardDescription,
    CardFooter,
    CardHeader,
    CardTitle,
    } from "@/components/ui/card"
import { Image } from 'astro:assets';
import qaEngineersImg from "@/images/success.gif";
---
const OnboardedPage = () => (
<MainLayout title="Onboarded" hideFooter>
  <div class="flex items-center justify-center h-[calc(100vh-25vh)]">
    <Card className="w-[500px]">
      <CardHeader>
        <CardTitle>Ready for service!</CardTitle>
        <CardDescription>Congratulations</CardDescription>
      </CardHeader>
      <CardContent>
        <Image src={qaEngineersImg} alt="Logistics"  />
        You have successfully activated Intune Assistant.
        <br />
        <i>"That's one small step for man, one giant leap for mankind." 🚀</i>
        <br/><br/>
        Now, go grab a coffee ☕️ and enjoy the moment.
        You've earned it!
      </CardContent>
      <CardFooter className="flex justify-between">
        <a href="/" class="btn btn-primary">Go to dashboard</a>
      </CardFooter>
    </Card>
  </div>
</MainLayout>
);

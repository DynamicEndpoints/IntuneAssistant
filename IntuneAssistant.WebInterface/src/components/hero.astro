---
import { Picture } from "astro:assets";
import heroImage from "assets/landing-page.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Revolutionize Intune Management
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      The assistant that empowers administrators to manage Microsoft Intune with efficiency
      It simplifies scattered, complex data, providing clear insights and streamlined management processes.
      Elevate your Intune administration to new heights with cutting-edge visualization and analysis.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="https://intuneassistant.cloud/getstarted"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" />
        Get Started
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/srozemuller/intuneassistant"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
         GitHub Repo
      </Link>
    </div>
  </div>
</main>
